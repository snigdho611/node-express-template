{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "rootDir": "./",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@*": ["./src/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "server/seed.ts", "seed.ts"],
    "exclude": ["node_modules"]
}
